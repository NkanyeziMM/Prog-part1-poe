<Window x:Class="RecipeApplication.RecipeStepWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApplication"
        mc:Ignorable="d"
        Title="Add Recipe Step" Height="450" Width="800">
    <Grid>
        <TextBox Name="DescriptionTextBox" Width="200" Height="30" VerticalAlignment="Top" Margin="10"/>
        <Button Content="Save Step" Width="100" Height="30" VerticalAlignment="Bottom" Margin="10" Click="SaveStep_Click"/>

    </Grid>
</Window>

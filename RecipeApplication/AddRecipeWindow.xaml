<Window x:Class="RecipeApplication.AddRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Add Recipe" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Recipe Name" />
            <TextBox Name="RecipeNameTextBox" Width="300" Margin="0 0 0 10"/>
            <Button Content="Add Ingredient" Click="AddIngredient_Click" Width="150" Margin="0 0 0 10"/>
            <ListBox Name="IngredientsListBox" Width="300" Height="100" Margin="0 0 0 10"/>
            <Button Content="Add Step" Click="AddStep_Click" Width="150" Margin="0 0 0 10"/>
            <ListBox Name="StepsListBox" Width="300" Height="100" Margin="0 0 0 10"/>
            <Button Content="Save Recipe" Click="SaveRecipe_Click" Width="150" Margin="0 0 0 10"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="RecipeApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Recipe Application" Height="350" Width="525">
    <Grid>
        <Button Content="Add Recipe" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Click="AddRecipe_Click"/>
        <Button Content="View Recipes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="0,30,0,0" Click="ViewRecipes_Click"/>
        <Button Content="Filter Recipes" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="0,60,0,0" Click="FilterRecipes_Click"/>
        <Button Content="Exit" HorizontalAlignment="Left" VerticalAlignment="Top" Width="100" Margin="0,90,0,0" Click="Exit_Click"/>
    </Grid>
</Window>

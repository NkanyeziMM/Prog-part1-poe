<Window x:Class="RecipeApplication.IngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApplication"
        mc:Ignorable="d"
        Title="Add Ingredient" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Name" />
            <TextBox Name="NameTextBox" Width="300" Margin="0 0 0 10"/>
            <TextBlock Text="Quantity" />
            <TextBox Name="QuantityTextBox" Width="300" Margin="0 0 0 10"/>
            <TextBlock Text="Unit" />
            <TextBox Name="UnitTextBox" Width="300" Margin="0 0 0 10"/>
            <TextBlock Text="Calories" />
            <TextBox Name="CaloriesTextBox" Width="300" Margin="0 0 0 10"/>
            <TextBlock Text="Food Group" />
            <TextBox Name="FoodGroupTextBox" Width="300" Margin="0 0 0 10"/>
            <Button Content="Save Ingredient" Click="SaveIngredient_Click" Width="150" Margin="0 0 0 10"/>
        </StackPanel>
    </Grid>
</Window>

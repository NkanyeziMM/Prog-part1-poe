<Window x:Class="RecipeApplication.FilterRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RecipeApplication"
        mc:Ignorable="d"
        Title="Filter RecipesWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Ingredient" />
            <TextBox Name="IngredientTextBox" Width="300" Margin="0 0 0 10"/>
            <TextBlock Text="Food Group" />
            <TextBox Name="FoodGroupTextBox" Width="300" Margin="0 0 0 10"/>
            <TextBlock Text="Max Calories" />
            <TextBox Name="MaxCaloriesTextBox" Width="300" Margin="0 0 0 10"/>
            <Button Content="Apply Filters" Click="ApplyFilters_Click" Width="150" Margin="0 0 0 10"/>
            <ListBox Name="FilteredRecipesListView" Width="300" Height="200" Margin="0 0 0 10"/>
        </StackPanel>
    </Grid>
</Window>
